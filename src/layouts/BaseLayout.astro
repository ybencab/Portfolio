---
import Header from "../components/Header.astro"

const { pageTitle } = Astro.props
---

<html lang="es" class="bg-gray-800">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body class="h-screen w-full my-0 mx-auto p-4 bg-gray-800 max-w-screen-md">
		<div class="fixed top-0 left-0 right-0 p-2 shadow-md">
			<Header />
		</div>
		<div class="mt-12 w-full">
			<main>
				<h1 class="text-gray-200 text-4xl font-extrabold">{pageTitle}</h1>
				<slot />
			</main>
		</div>
	</body>
</html>
