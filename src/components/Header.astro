<header>
  <nav class="rounded-md">
    <div class="flex flex-wrap items-center justify-between mx-auto">
      <div class="flex items-center justify-center w-10 h-10 overflow-hidden bg-blue-600 rounded-full">
        <span class="font-medium text-white">YB</span>
      </div>
      <button id="menu-toggler" type="button" class="md:hidden rounded-lg p-2 text-gray-400 hover:bg-gray-700 focus:ring-2 focus:ring-gray-600">
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg> 
      </button>
      <div class="hidden w-full md:block md:w-auto" id="navbar-menu">
        <ul class="flex flex-col mt-4 md:mt-0 p-4 md:p-0 border border-gray-600 rounded-lg bg-gray-700 font-semibold md:flex-row md:border-0 md:bg-transparent">
          <li>
            <a href="/" class="block py-2 px-3 text-gray-200 hover:bg-gray-600 rounded md:hover:bg-transparent md:hover:text-blue-600 md:focus:text-blue-600">Home</a>
          </li>
          <li>
            <a href="/projects" class="block py-2 px-3 text-gray-200 hover:bg-gray-600 rounded md:hover:bg-transparent md:hover:text-blue-600 md:focus:text-blue-600">Proyectos</a>
          </li>
          <li>
            <a href="/blog" class="block py-2 px-3 text-gray-200 hover:bg-gray-600 rounded md:hover:bg-transparent md:hover:text-blue-600 md:focus:text-blue-600">Blog</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  document.getElementById("menu-toggler").addEventListener("click", () => {
    document.getElementById("navbar-menu").classList.toggle("hidden")
  })
</script>